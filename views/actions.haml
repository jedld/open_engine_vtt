%table
  - entity&.available_actions(session, battle).each_slice(10) do |actions|
    %tr
      - actions.each do |action|
        %td
          %button{ :class => "action-button", :data => { action: { type: action.class.to_s, opts: action.to_h } }, :title => action.label }
            -if action.try(:second_hand)
              %img{ :src => "actions/#{action.action_type}_second.png", :style => "width: 50px; height: 50px;"}
            -elsif action.try(:thrown)
              %img{ :src => "actions/#{action.action_type}_thrown.png", :style => "width: 50px; height: 50px;"}
            - else
              %img{ :src => "actions/#{action.action_type}.png", :style => "width: 50px; height: 50px;"}
